    <table name="hosts">
        <column name="hostname" type="str" />
        <column name="ip" type="str" />
        <column name="mac" type="str" />
        <column name="hostname" type="str" />
        <column name="status" type="int" />
        <column name="uptime" type="int" />
        <column name="frames_complete" type="int" />
        <column name="frames_failed" type="int" />
        <column name="frames_rendering" type="int" />
        <column name="cpus" type="int" />
        <column name="ram_total" type="int" />
        <column name="ram_used" type="int" />
    </table>
    <table name="software">
        <column name="ip" type="str" />
        <column name="common_name" type="str" />
        <column name="version" type="str" />
        <column name="command" type="str" />
    </table>
    <table name="frames">
        <column name="job" type="str" />
        <column name="job_parent" type="str" />
        <column name="frame" type="int" />
        <column name="time_start" type="int" />
        <column name="time_end" type="int" />
        <column name="time_total" type="int" />
        <column name="time_processing" type="int" />
        <column name="ram_used" type="int" />
        <column name="status" type="int" />
        <column name="software" type="str" />
        <column name="command" type="str" />
        <column name="log" type="str" />
    </table>
    <table name="jobs">
        <!--
        The following values will either be calculated or set in
        the gui upon change for performance reasons
            Progress
            Frames Total
            Frames Complete
            Extra info avaliable with right-click:
                Processing hours
                Runtime
                Graphs perhaps?
        --->
        <column name="job" type="str" />
        <column name="priority" type="int" />
        <column name="status" type="int" />
    </table>
    <table name="stats">
        <!--
        The following values will either be calculated or set in
        the gui upon change for performance reasons
            Frames Total
            Frames Complete
            Frames Failed (click to view)
            Render Time Average
            Total Hosts
            Total RAM Free
            Total Processing hours
            Total time rendering
            Failure Rate (%)
        --->
    </table>
    <table name="config">
        <column name="" />
    </table>
    <table name="tmp">
        <column name="" />
    </table>
</dbbase>
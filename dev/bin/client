import os
import lib.Screen as screen
import lib.Host as host
import lib.ClientProcess as client

from optparse import OptionParser

def main():
    hostname = host.hostname()

if __name__ == '__main__':
    parser = OptionParser()
    parser.add_option(
                        "--stop", dest="stop", action="callback",
                        callback=stop, help="stop the client"
                     )
    parser.add_option(
                        "--start", dest="start", action="callback",
                        callback=start, help="start the client"
                     )
    parser.add_option(
                        "--restart", dest="restart", action="callback",
                        callback=restart, help="restart the client"
                     )
    parser.add_option(
                        "--query", dest="query", action="callback",
                        callback=query, help="query the client"
                     )

<Settings>
    <globals>
        <!--
            Template Variables:
                lib - Library name of the calling module
                module - File of the calliung module
                line - line logger is being called from
                level - name of the level being called
                logName - general of the log making the call
                message - the message being sent
        -->
        <attr name="allowSolo" value="False" />
        <attr name="defaultLevel" value="4" />
        <attr name="template" value="%(module)s:%(line)i - %(level)s - %(message)s" />
        <attr name="timeFormat" value="%Y-%m-%d %H:%M:%S" />
    </globals>
    <levels>
        <!--
            Attributes:
                name: The value to call the individual log level
                function: The function call to the log level (defaults: same as name)
                enabled: Turn an individual log level on or off (default: True)
                solo: Isolate the output of a level (default: False)
        -->
        <level name="sqlite" />
        <level name="netpacket" />
        <level name="queue" />
        <level name="conditional" />
        <level name="module import" function="module" />
        <level name="network.server" function="netserver" />
        <level name="network.client" function="netclient" />
        <level name="rpc.debug" function="rpcdebug" />
        <level name="rpc.call" function="rpccall" enabled="False" />
        <level name="rpc.result" function="rpcresult" enabled="False" />
        <level name="rpc.error" function="rpcerror" enabled="False" />
        <level name="network" />
        <level name="ui" />
        <level name="fixme" />
        <level name="not implemented" function="notimplemented" />
        <level name="debug" />
        <level name="info" />
        <level name="not compatible" function="notcompatible" />
        <level name="warning" />
        <level name="deprecated" />
        <level name="error" />
        <level name="critical" />
        <level name="fatal" />
        <level name="terminate" />
    </levels>
</Settings>
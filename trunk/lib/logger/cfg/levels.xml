<!--

Variables:
	name (required):
		The name of the level to be displayed
		
	method (required if name has whitespace):
		The method to call on the logger object
		
	handler:
		The handler to pass the output log string to (see the handlers module)
-->

<LEVELS>
	<LevelConfig>
		<level name="deep debug" method="deepDebug" handlers="handlers.inspector" /> 
		<level name="debug" />
		<level name="error" handler="handlers.stderr" />
		<level name="info" />
	</LevelConfig>

	<Handlers>
		<handler name="test" />
	</Handlers>
</LEVELS>